{
    "name": "flavorfultasks",
    "displayName": "Flavorful Tasks",
    "description": "Manager of Markdown Flavored Tasks",
    "version": "0.0.1",
    "publisher": "oeid",
    "private": true,
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/omars-lab/plugins"
    },
    "engines": {
        "vscode": "^1.59.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.TodoMarkDone"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.TodoMarkDone",
                "title": "Todo: Mark as Done"
            },
            {
                "command": "extension.TodoReschedule",
                "title": "Todo: Reschedule"
            },
            {
                "command": "extension.TodoCreate",
                "title": "Todo: Create New Todo"
            },
            {
                "command": "extension.TodoMarkCanceled",
                "title": "Todo: Cancel Todo"
            }
        ],
        "keybindings": [
            {
                "command": "extension.TodoCreate",
                "mac": "shift+cmd+l",
                "when": "editorTextFocus"
            },
            {
                "command": "extension.TodoMarkDone",
                "mac": "shift+cmd+d",
                "when": "editorTextFocus"
            },
            {
                "command": "extension.TodoMarkCanceled",
                "mac": "shift+cmd+r",
                "when": "editorTextFocus"
            },
            {
                "command": "extension.TodoReschedule",
                "mac": "shift+cmd+.",
                "when": "editorTextFocus"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "eslint . --ext .ts,.tsx",
        "watch": "tsc -watch -p ./"
    },
    "devDependencies": {
        "@types/node": "^12.7.0",
        "@types/vscode": "^1.59.0",
        "@typescript-eslint/eslint-plugin": "^4.31.0",
        "@typescript-eslint/parser": "^4.31.0",
        "eslint": "^7.32.0",
        "typescript": "^4.4.0",
        "vsce": "^1.97.0"
    },
    "dependencies": {
        "moment": "^2.29.1"
    }
}
